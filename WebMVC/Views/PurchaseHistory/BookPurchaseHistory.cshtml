@model WebMVC.Models.PurchaseHistory.PurchaseHistoryListViewModel

@{
    ViewBag.Title = "Book Purchase History";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use your layout file here
}

<div class="container mt-4">
    <h2>Purchase Histories for @Model.PurchaseHistories.FirstOrDefault()?.BookTitle</h2>

    @if (Model.PurchaseHistories.Any())
    {
        <table class="table table-striped mt-4">
            <thead>
                <tr>
                    <th>Customer Name</th>
                    <th>Purchase Date</th>
                    <th>Total Price</th>
                    <th>Paid</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var history in Model.PurchaseHistories)
                {
                    <tr>
                        <td>@history.CustomerUsername</td>
                        <td>@history.PurchaseDate.ToString("dd MMM yyyy")</td>
                        <td>@history.TotalPrice.ToString("C")</td>
                        <td>
                            <span class="badge @(history.Paid ? "badge-success" : "badge-secondary")">
                                @(history.Paid ? "Yes" : "No")
                            </span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No purchase history available for this book.</p>
    }
</div>

<style>
    .badge-success {
        color: #fff;
        background-color: #28a745; /* This is Bootstrap 4's success green */
    }

    .badge-secondary {
        color: #fff;
        background-color: #6c757d; /* This is Bootstrap 4's secondary gray */
    }

    /* Bootstrap 5 equivalent */
    .bg-success {
        color: #fff;
        background-color: #198754; /* This is Bootstrap 5's success green */
    }

    .bg-secondary {
        color: #fff;
        background-color: #6c757d; /* This is Bootstrap 5's secondary gray */
    }

</style>
